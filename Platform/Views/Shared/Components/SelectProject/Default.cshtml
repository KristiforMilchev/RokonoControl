@{
    var Projects = ViewData["Projects"] as List<Projects>;
    var Index = ViewData["SelectedIndex"] as int?;

}


<div id="default">
    <select id="chatProjects">
        @foreach (var project in Projects)
        {
            <option value="@project.Id">@project.ProjectName</option>
        }

    </select>
</div>


<script>
    ej.base.enableRipple(true);

    var chatProjects = new ej.dropdowns.DropDownList({

        // set the placeholder to DropDownList input element
        placeholder: 'Select Project',
        // set the height of the popup element
        popupHeight: '200px',
        index: @Index,
        // bind the change event
        change: ProjectChanged
    });
    chatProjects.appendTo('#chatProjects');
 

    function ProjectChanged(args) {
        console.log(args);
        SelectedProjectId = parseInt(args.value);
    }
</script>