        <div class="main-card mb-12 card">
            <div class="card-body text-center">
                 
                <div class="page-title-heading">
                    <div class="page-title-icon">
                        <i class="pe-7s-graph text-success">
                        </i>
                    </div>
                    <div>Project Dashboard
                        <div class="page-title-subheading"> @ProjectName
                        </div>
                    </div>
                </div>  
            </div>
        </div>
          <div class="main-card mb-12 card">
            <div class="card-body text-center">
                 
               <div class="row">
            <p>Priority</p>
            <select class="form-control-sm form-control"  id="ItemPriority">
                @foreach(var wType in WorkItemTypes)
                {
                    <option value="@wType.Id">@wType.TypeName</option>
                }
            </select>
        </div>
        <div class="row">
            <div class="cols-sample-area" id="board">
                <div id="column1">
                    <span class="e-backlog e-icon"></span>
                    Backlog
                </div>
                <div id="column2">
                    <span class="e-inprogress e-icon"></span>
                            In Progress 
                </div>
                <div id="column3">
                    <span class="e-testing e-icon"></span>
                            Testing
                </div>
                <div id="column4">
                    <span class="e-done e-icon"></span>
                            Done
                </div>
                <div id="KanbanHolder">
                    <div id="Kanban"></div>
                </div>
            </div>
        </div>
            </div>
        </div>
 
     <style>
        .e-kanban .e-draggedcard {
	     z-index:1;
	  }

    </style>


    <script type="text/javascript">
        $(function() {

            $.ajax({
                type: 'GET',
                url: '/Boards/GetWorkItems?projectId=@ProjectId&workItemType='+$("#ItemPriority :selected").val(),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    console.log(response);
                    
                    GenerateKaban(response);
                },
                error: function (xhr, status, error) {
                    console.log(xhr);
                }
            });
         //   var data = ej.DataManager(window.kanbanData).executeLocal(ej.Query().take(20));
          
		 });
        $("#ItemPriority").on('change', function() {
            alert( this.value );
            $.ajax({
                type: 'GET',
                url: '/Boards/GetWorkItems?projectId=@ProjectId&workItemType='+$("#ItemPriority :selected").val(),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    console.log(response);
                    
                    GenerateKaban(response);
                },
                error: function (xhr, status, error) {
                    console.log(xhr);
                }
            });
        });
          
         function GenerateKaban(response)
         {
             $("#KanbanHolder").html("<div id=\"Kanban\"></div>");
             $("#KanbanHolder").html();
            $("#Kanban").ejKanban(
            {
                dataSource: response,
                allowExternalDragAndDrop: true,
                cardDrop: DragStarted,
                cardDoubleClick: CardSelected,
                columns: [
                    { headerText: "Backlog", key: "Open", headerTemplate: "#column1"},
                    { headerText: "In Progress", key: "InProgress", headerTemplate: "#column2"},
                    { headerText: "Testing", key: "Testing", headerTemplate: "#column3"},
                    { headerText: "Done", key: "Done", headerTemplate: "#column4"}
                ],                                                           			
                keyField: "status",
                allowTitle: true,
                fields: {
                    primaryKey: "id",						 
                    content: "summary",
                    },
                allowSelection: false
            });
         }
        function CardSelected(args)
        {  
            console.log(args);
            console.log("/Dashboard/EditWorkItem?projectId=@ProjectId&&workItem="+args.data.id); 
            window.location.href = "/Dashboard/EditWorkItem?projectId=@ProjectId&&workItem="+args.data.id;
            
        }

         function DragStarted(args)
         {
            console.log(args);
            var dto = {
                "CardId" :args.data[0].id,
                "Board" :args.data[0].status,
                "ProjectId" : @ProjectId
            }
           // console.log(dto);
            $.ajax({
                type: 'POST',
                url: '/Boards/ChangeWorkItemBoard',
                data: JSON.stringify(dto),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function(response) {
                    //window.location.href = "/Dashboard/AssignAccountProjects?id="+response;
                },
                error: function(xhr, status, error) {
                    console.log(error);
                }
            });
         }


	</script>