    <style type="text/css" class="cssStyles">  
     .e-backlog,.e-inprogress,.e-testing,.e-done {
         font-size: 16px;
         padding-right: 5px;
		 display: inline-block;
     }
       .e-backlog:before{
	       content: "\e807";
	   }
	   .e-inprogress:before{
	   content: "\e808";
	   }
	   .e-testing:before{
	   content:"\e809";
	   }
	   .e-done:before{
	   content: "\e80a";
	   }		  
       .row{
           margin-left: 15px;
           margin-right: 15px;
       }
